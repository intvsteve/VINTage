<Ribbon:RibbonTextBox
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Ribbon="clr-namespace:INTV.Ribbon;assembly=INTV.Ribbon"
        xmlns:intellicartCommands="clr-namespace:INTV.Intellicart.Commands;assembly=INTV.Intellicart"
        xmlns:behaviors="clr-namespace:INTV.Shared.Behavior;assembly=INTV.Shared"
    Margin="2,0,0,0" TextBoxWidth="128" Text="{Binding Intellicart.Timeout}"
    SmallImageSource="{Binding Path=SmallIcon, Source={x:Static intellicartCommands:DeviceCommandGroup.SetWriteTimeoutCommand}, Mode=OneTime}"
    ToolTipTitle="{Binding Path=ToolTipTitle, Source={x:Static intellicartCommands:DeviceCommandGroup.SetWriteTimeoutCommand}, Mode=OneTime}"
    ToolTipDescription="{Binding Path=ToolTipDescription, Source={x:Static intellicartCommands:DeviceCommandGroup.SetWriteTimeoutCommand}, Mode=OneTime}"
    ToolTipImageSource="{Binding Path=ToolTipIcon, Source={x:Static intellicartCommands:DeviceCommandGroup.SetWriteTimeoutCommand}, Mode=OneTime}"
    behaviors:NumericTextEditBehavior.IsNumericEditor="True">
</Ribbon:RibbonTextBox>
