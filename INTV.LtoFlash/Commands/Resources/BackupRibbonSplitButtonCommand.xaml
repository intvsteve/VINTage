<Ribbon:RibbonSplitButton
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Ribbon="clr-namespace:INTV.Ribbon;assembly=INTV.Ribbon"
        xmlns:ltoFlashCommands="clr-namespace:INTV.LtoFlash.Commands;assembly=INTV.LtoFlash"
        xmlns:intvCommands="clr-namespace:INTV.Shared.Commands;assembly=INTV.Shared"
    LargeImageSource="{Binding Path=LargeIcon, Source={x:Static ltoFlashCommands:DeviceCommandGroup.BackupRibbonSplitButtonCommand}, Mode=OneTime}"
    SmallImageSource="{Binding Path=SmallIcon, Source={x:Static ltoFlashCommands:DeviceCommandGroup.BackupRibbonSplitButtonCommand}, Mode=OneTime}"
    Label="{Binding Path=Name, Source={x:Static ltoFlashCommands:DeviceCommandGroup.BackupRibbonSplitButtonCommand}, Mode=OneTime}"
    Command="{x:Static ltoFlashCommands:DeviceCommandGroup.BackupCommand}" CommandParameter="{Binding LtoFlash}"
    ToolTipTitle="{Binding Path=ToolTipTitle, Source={x:Static ltoFlashCommands:DeviceCommandGroup.BackupRibbonSplitButtonCommand}, Mode=OneTime}"
    ToolTipDescription="{Binding Path=ToolTipDescription, Source={x:Static ltoFlashCommands:DeviceCommandGroup.BackupRibbonSplitButtonCommand}, Mode=OneTime}"
    ToolTipImageSource="{Binding Path=ToolTipIcon, Source={x:Static ltoFlashCommands:DeviceCommandGroup.BackupRibbonSplitButtonCommand}, Mode=OneTime}"
    DropDownToolTipTitle="{x:Static intvCommands:CommandProviderHelpers.RibbonSplitButtonToggleButtonTip}">
    <Ribbon:RibbonMenuItem Header="{Binding Path=MenuItemName, Source={x:Static ltoFlashCommands:DeviceCommandGroup.BackupCommand}, Mode=OneTime}"
                           ImageSource="{Binding Path=SmallIcon, Source={x:Static ltoFlashCommands:DeviceCommandGroup.BackupCommand}, Mode=OneTime}"
                           ToolTip="{Binding Path=ToolTip, Source={x:Static ltoFlashCommands:DeviceCommandGroup.BackupCommand}, Mode=OneTime}"
                           Command="{x:Static ltoFlashCommands:DeviceCommandGroup.BackupCommand}" CommandParameter="{Binding Path=LtoFlash}"/>
    <Ribbon:RibbonMenuItem Header="{Binding Path=MenuItemName, Source={x:Static ltoFlashCommands:DeviceCommandGroup.RestoreCommand}, Mode=OneTime}"
                           ImageSource="{Binding Path=SmallIcon, Source={x:Static ltoFlashCommands:DeviceCommandGroup.RestoreCommand}, Mode=OneTime}"
                           ToolTip="{Binding Path=ToolTip, Source={x:Static ltoFlashCommands:DeviceCommandGroup.RestoreCommand}, Mode=OneTime}"
                           Command="{x:Static ltoFlashCommands:DeviceCommandGroup.RestoreCommand}" CommandParameter="{Binding Path=LtoFlash}"/>
</Ribbon:RibbonSplitButton>
