<Ribbon:RibbonApplicationMenuItem
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Ribbon="clr-namespace:INTV.Ribbon;assembly=INTV.Ribbon"
        xmlns:ltoFlashCommands="clr-namespace:INTV.LtoFlash.Commands;assembly=INTV.LtoFlash"
    Header="{Binding Path=MenuItemName, Source={x:Static ltoFlashCommands:MenuLayoutCommandGroup.EmptyMenuLayoutCommand}, Mode=OneTime}"
    Command="{x:Static ltoFlashCommands:MenuLayoutCommandGroup.EmptyMenuLayoutCommand}" CommandParameter="{Binding LtoFlash}"
    QuickAccessToolBarImageSource="{Binding Path=SmallIcon, Source={x:Static ltoFlashCommands:MenuLayoutCommandGroup.EmptyMenuLayoutCommand}, Mode=OneTime}"
    ImageSource="{Binding Path=LargeIcon, Source={x:Static ltoFlashCommands:MenuLayoutCommandGroup.EmptyMenuLayoutCommand}, Mode=OneTime}"/>
