    Label="{Binding Path=Name, Source={x:Static intvCommands:RomListCommandGroup.AddRomFoldersCommand}, Mode=OneTime}"
    Command="{Binding RomList.AddRomsCommand}" CommandParameter="True"
    ToolTipTitle="{Binding Path=ToolTipTitle, Source={x:Static intvCommands:RomListCommandGroup.AddRomFoldersCommand}, Mode=OneTime}"
    ToolTipDescription="{Binding Path=ToolTipDescription, Source={x:Static intvCommands:RomListCommandGroup.AddRomFoldersCommand}, Mode=OneTime}"
    ToolTipImageSource="{Binding Path=ToolTipIcon, Source={x:Static intvCommands:RomListCommandGroup.AddRomFoldersCommand}, Mode=OneTime}"/>
